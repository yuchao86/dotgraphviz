  fontname = "Microsoft YaHei";
  fontsize = 12;

  node [ fontname = "Microsoft YaHei", fontsize = 12, shape = "record" ]; 
  edge [ fontname = "Microsoft YaHei", fontsize = 12 ];

  subgraph cluster_sl{
    label="IDP支持层";
